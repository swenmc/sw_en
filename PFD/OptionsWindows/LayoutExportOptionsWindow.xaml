<Window x:Class="PFD.LayoutExportOptionsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:System="clr-namespace:System;assembly=mscorlib"
        xmlns:local="clr-namespace:PFD"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Layout Export Options" Height="530" Width="650">
    <Window.Resources>
        <System:Double x:Key="theTextBoxWidth">90</System:Double>
        <System:Double x:Key="theTextBoxWidthLarge">140</System:Double>
    </Window.Resources>
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
        <Grid Name="GridExportOptions" Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2.7*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
                
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="200"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <StackPanel Grid.Row="0" Grid.Column="0" Grid.RowSpan="8">
                                
                <StackPanel Orientation="Horizontal" Margin="0 0 0 5">
                    <CheckBox Name="chckExportModel3D" Margin="0 0 0 0" IsChecked="{Binding ExportModel3D, UpdateSourceTrigger=PropertyChanged}">Model 3D</CheckBox>
                    <TextBlock Margin="20 0 5 0" VerticalAlignment="Top">View:</TextBlock>
                    <ComboBox Name ="Combobox_View" HorizontalAlignment="Left" Width="{StaticResource theTextBoxWidthLarge}" 
                         VerticalAlignment="Top" ItemsSource="{Binding Path=ModelViews}" SelectedIndex="{Binding Path=ViewIndex, UpdateSourceTrigger=PropertyChanged, ValidatesOnExceptions=True}"/>
                </StackPanel>

                <CheckBox Name="chckExportModelViews" Margin="0 0 0 5" IsChecked="{Binding ExportModelViews, UpdateSourceTrigger=PropertyChanged}">Framing Scheme Views</CheckBox>

                <StackPanel Orientation="Horizontal" Margin="20 0 0 0">
                    <CheckBox Name="chckExportFSV_3DScene" Margin="0 0 0 0" IsChecked="{Binding ExportFrameView3DScene, UpdateSourceTrigger=PropertyChanged}">3D scene</CheckBox>
                    <TextBlock Margin="10 0 5 0" VerticalAlignment="Top">View:</TextBlock>
                    <ComboBox Name ="Combobox_FrameViews3DSceneView" HorizontalAlignment="Left" Width="{StaticResource theTextBoxWidthLarge}" 
                         VerticalAlignment="Top" ItemsSource="{Binding Path=ModelViews}" SelectedIndex="{Binding Path=FrameViewIndex, UpdateSourceTrigger=PropertyChanged, ValidatesOnExceptions=True}"/>
                </StackPanel>
                <CheckBox Name="chckExportModelViewsFront" Margin="20 0 0 5" IsChecked="{Binding ExportModelViewsFront, UpdateSourceTrigger=PropertyChanged}">Front</CheckBox>
                <CheckBox Name="chckExportModelViewsBack" Margin="20 0 0 5" IsChecked="{Binding ExportModelViewsBack, UpdateSourceTrigger=PropertyChanged}">Back</CheckBox>
                <CheckBox Name="chckExportModelViewsLeft" Margin="20 0 0 5" IsChecked="{Binding ExportModelViewsLeft, UpdateSourceTrigger=PropertyChanged}">Left</CheckBox>
                <CheckBox Name="chckExportModelViewsRight" Margin="20 0 0 5" IsChecked="{Binding ExportModelViewsRight, UpdateSourceTrigger=PropertyChanged}">Right</CheckBox>
                <CheckBox Name="chckExportModelViewsRoof" Margin="20 0 0 5" IsChecked="{Binding ExportModelViewsRoof, UpdateSourceTrigger=PropertyChanged}">Roof</CheckBox>
                <CheckBox Name="chckExportModelViewsMiddleFrame" Margin="20 0 0 5" IsChecked="{Binding ExportModelViewsMiddleFrame, UpdateSourceTrigger=PropertyChanged}">Middle Frame</CheckBox>
                <CheckBox Name="chckExportModelViewsColumns" Margin="20 0 0 5" IsChecked="{Binding ExportModelViewsColumns, UpdateSourceTrigger=PropertyChanged}">Columns</CheckBox>
                <CheckBox Name="chckExportModelViewsFoundations" Margin="20 0 0 5" IsChecked="{Binding ExportModelViewsFoundations, UpdateSourceTrigger=PropertyChanged}">Foundations</CheckBox>
                <CheckBox Name="chckExportModelViewsFloor" Margin="20 0 0 5" IsChecked="{Binding ExportModelViewsFloor, UpdateSourceTrigger=PropertyChanged}">Floor</CheckBox>

                <CheckBox Name="chckExportModelCladdingLayingSchemeViews" Margin="0 0 0 5" IsChecked="{Binding ExportModelCladdingLayingSchemeViews, UpdateSourceTrigger=PropertyChanged}">Cladding Scheme Views</CheckBox>

                <StackPanel Orientation="Horizontal" Margin="20 0 0 0">
                    <CheckBox Name="chckExportCSV_3DScene" Margin="0 0 0 0" IsChecked="{Binding ExportCladdingView3DScene, UpdateSourceTrigger=PropertyChanged}">3D scene</CheckBox>
                    <TextBlock Margin="10 0 5 0" VerticalAlignment="Top">View:</TextBlock>
                    <ComboBox Name ="Combobox_CladdingViews3DSceneView" HorizontalAlignment="Left" Width="{StaticResource theTextBoxWidthLarge}" 
                         VerticalAlignment="Top" ItemsSource="{Binding Path=ModelViews}" SelectedIndex="{Binding Path=CladdingViewIndex, UpdateSourceTrigger=PropertyChanged, ValidatesOnExceptions=True}"/>
                </StackPanel>
                <CheckBox Name="chckExportModelCladdingLayingSchemeViewsFront" Margin="20 0 0 5" IsChecked="{Binding ExportModelCladdingLayingSchemeViewsFront, UpdateSourceTrigger=PropertyChanged}">Front</CheckBox>
                <CheckBox Name="chckExportModelCladdingLayingSchemeViewsBack" Margin="20 0 0 5" IsChecked="{Binding ExportModelCladdingLayingSchemeViewsBack, UpdateSourceTrigger=PropertyChanged}">Back</CheckBox>
                <CheckBox Name="chckExportModelCladdingLayingSchemeViewsLeft" Margin="20 0 0 5" IsChecked="{Binding ExportModelCladdingLayingSchemeViewsLeft, UpdateSourceTrigger=PropertyChanged}">Left</CheckBox>
                <CheckBox Name="chckExportModelCladdingLayingSchemeViewsRight" Margin="20 0 0 5" IsChecked="{Binding ExportModelCladdingLayingSchemeViewsRight, UpdateSourceTrigger=PropertyChanged}">Right</CheckBox>
                <CheckBox Name="chckExportModelCladdingLayingSchemeViewsRoof" Margin="20 0 0 5" IsChecked="{Binding ExportModelCladdingLayingSchemeViewsRoof, UpdateSourceTrigger=PropertyChanged}">Roof</CheckBox>
                
                <CheckBox Name="chckExportJointTypes" Margin="0 0 0 5" IsChecked="{Binding ExportJointTypes, UpdateSourceTrigger=PropertyChanged}">Joint Types</CheckBox>
                <CheckBox Name="chckExportFootingTypes" Margin="0 0 0 5" IsChecked="{Binding ExportFootingTypes, UpdateSourceTrigger=PropertyChanged}">Footing Types</CheckBox>
                <CheckBox Name="chckExportFloorDetails" Margin="0 0 0 5" IsChecked="{Binding ExportFloorDetails, UpdateSourceTrigger=PropertyChanged}">Floor Details</CheckBox>
                <CheckBox Name="chckExportStandardDetails" Margin="0 0 0 5" IsChecked="{Binding ExportStandardDetails, UpdateSourceTrigger=PropertyChanged}">Standard Details</CheckBox>                
            </StackPanel>
            
            <TextBlock Grid.Row="0" Grid.Column="1">Page Size:</TextBlock>
            <ComboBox Grid.Row="0" Grid.Column="2" Name ="Combobox_PageSize" HorizontalAlignment="Left" 
                      Width="{StaticResource theTextBoxWidth}" VerticalAlignment="Top" 
                      ItemsSource="{Binding Path=PageSizes, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}" 
                  DisplayMemberPath="Name" SelectedValuePath="ID" SelectedValue="{Binding Path=ExportPageSize, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay, ValidatesOnExceptions=True}"/>

            <TextBlock Grid.Row="1" Grid.Column="1">Page Orientation:</TextBlock>
            <ComboBox Grid.Row="1" Grid.Column="2" Name ="Combobox_PageOrientation" HorizontalAlignment="Left" 
                      Width="{StaticResource theTextBoxWidth}" VerticalAlignment="Top" 
                      ItemsSource="{Binding Path=PageOrientations, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}" 
                  DisplayMemberPath="Name" SelectedValuePath="ID" SelectedValue="{Binding Path=ExportPageOrientation, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay, ValidatesOnExceptions=True}"/>

            <TextBlock Grid.Row="2" Grid.Column="1">Framing Views Page Size:</TextBlock>
            <ComboBox Grid.Row="2" Grid.Column="2" Name ="Combobox_PageSizeViews" HorizontalAlignment="Left" 
                      Width="{StaticResource theTextBoxWidth}" VerticalAlignment="Top" 
                      ItemsSource="{Binding Path=PageSizes, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}" 
                  DisplayMemberPath="Name" SelectedValuePath="ID" SelectedValue="{Binding Path=ExportPageSizeViews, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay, ValidatesOnExceptions=True}"/>

            <TextBlock Grid.Row="3" Grid.Column="1">Framing Views Page Orientation:</TextBlock>
            <ComboBox Grid.Row="3" Grid.Column="2" Name ="Combobox_PageOrientationViews" HorizontalAlignment="Left" 
                      Width="{StaticResource theTextBoxWidth}" VerticalAlignment="Top" 
                      ItemsSource="{Binding Path=PageOrientations, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}" 
                  DisplayMemberPath="Name" SelectedValuePath="ID" SelectedValue="{Binding Path=ExportPageOrientationViews, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay, ValidatesOnExceptions=True}"/>

            <TextBlock Grid.Row="4" Grid.Column="1">Cladding Views Page Size:</TextBlock>
            <ComboBox Grid.Row="4" Grid.Column="2" Name ="Combobox_PageSizeViewsCladding" HorizontalAlignment="Left" 
                      Width="{StaticResource theTextBoxWidth}" VerticalAlignment="Top" 
                      ItemsSource="{Binding Path=PageSizes, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}" 
                  DisplayMemberPath="Name" SelectedValuePath="ID" SelectedValue="{Binding Path=ExportPageSizeViewsCladding, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay, ValidatesOnExceptions=True}"/>

            <TextBlock Grid.Row="5" Grid.Column="1">Cladding Views Page Orientation:</TextBlock>
            <ComboBox Grid.Row="5" Grid.Column="2" Name ="Combobox_PageOrientationViewsCladding" HorizontalAlignment="Left" 
                      Width="{StaticResource theTextBoxWidth}" VerticalAlignment="Top" 
                      ItemsSource="{Binding Path=PageOrientations, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}" 
                  DisplayMemberPath="Name" SelectedValuePath="ID" SelectedValue="{Binding Path=ExportPageOrientationViewsCladding, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay, ValidatesOnExceptions=True}"/>

            <TextBlock Grid.Row="6" Grid.Column="1">Images Quality:</TextBlock>
            <ComboBox Grid.Row="6" Grid.Column="2" Name ="Combobox_ImagesQuality" HorizontalAlignment="Left" 
                      Width="{StaticResource theTextBoxWidth}" VerticalAlignment="Top" 
                      ItemsSource="{Binding Path=ImagesQualities, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}" 
                  DisplayMemberPath="Name" SelectedValuePath="ID" SelectedValue="{Binding Path=ExportImagesQuality, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay, ValidatesOnExceptions=True}"/>

            <StackPanel Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="3" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0 0 0 5" >
                <Button Width="80" Height="25" Name="BtnOK" Margin="0 0 0 0" Click="BtnOK_Click">OK</Button>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Window>