<Window x:Class="PFD.DisplayOptionsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:System="clr-namespace:System;assembly=mscorlib"
        xmlns:local="clr-namespace:PFD"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Display Options" Height="1050" Width="1000" Loaded="Window_Loaded">
    <Window.Resources>
        <System:Double x:Key="theTextBoxWidth">90</System:Double>
        <System:Double x:Key="theTextBoxWidthLarge">150</System:Double>
    </Window.Resources>

    <Grid Name="GridMain" Margin="0,0,0,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="170" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="30" />
        </Grid.RowDefinitions>
        <TreeView Name="MainTreeView"  Grid.Column="0" SelectedItemChanged="MainTreeView_SelectedItemChanged">
            <TreeViewItem Header="GUI" IsExpanded="True">
                <TreeViewItem Name="twiGUI_3D_scene" Header="3D scene" IsSelected="True"></TreeViewItem>
                <TreeViewItem Name="twiGUI_Joint_Preview" Header="Joint Preview"></TreeViewItem>
                <TreeViewItem Name="twiGUI_Foundation_Preview" Header="Foundation Preview"></TreeViewItem>
                <TreeViewItem Name="twiGUI_Accessories_Preview" Header="Accessories Preview"></TreeViewItem>
            </TreeViewItem>
            <TreeViewItem Header="Report" IsExpanded="True">
                <TreeViewItem Name="twiReport_3D_scene" Header="3D scene"></TreeViewItem>
                <TreeViewItem Header="Frame Views" IsExpanded="True">
                    <TreeViewItem Name="twiReport_FW_Elevations" Header="Elevations"></TreeViewItem>
                    <TreeViewItem Name="twiReport_FW_Roof" Header="Roof"></TreeViewItem>
                </TreeViewItem>
                <TreeViewItem Name="twiReport_Joints" Header="Joints"></TreeViewItem>
                <TreeViewItem Name="twiReport_Foundations" Header="Foundations"></TreeViewItem>
            </TreeViewItem>
            <TreeViewItem Header="Layouts" IsExpanded="True">
                <TreeViewItem Name="twiLayouts_3D_scene" Header="3D scene"></TreeViewItem>
                <TreeViewItem Header="Frame Views" IsExpanded="True">
                    <TreeViewItem Name="twiLayouts_FW_Elevations" Header="Elevations"></TreeViewItem>
                    <TreeViewItem Name="twiLayouts_FW_Roof" Header="Roof"></TreeViewItem>
                    <TreeViewItem Name="twiLayouts_FW_Frames" Header="Frames"></TreeViewItem>
                    <TreeViewItem Name="twiLayouts_FW_Columns" Header="Columns"></TreeViewItem>
                    <TreeViewItem Name="twiLayouts_FW_Foundations" Header="Foundations"></TreeViewItem>
                    <TreeViewItem Name="twiLayouts_FW_Floor" Header="Floor"></TreeViewItem>
                </TreeViewItem>
                <TreeViewItem Header="Cladding Views" IsExpanded="True">
                    <TreeViewItem Name="twiLayouts_CW_Elevations" Header="Elevations"></TreeViewItem>
                    <TreeViewItem Name="twiLayouts_CW_Roof" Header="Roof"></TreeViewItem>                    
                </TreeViewItem>
                <TreeViewItem Name="twiLayouts_Joints" Header="Joints"></TreeViewItem>
                <TreeViewItem Name="twiLayouts_Foundations" Header="Foundations"></TreeViewItem>
            </TreeViewItem>
            
            
        </TreeView>

        <TabControl Grid.Column="1" Margin="5,5,0,0" Name="MainTabControl">
            <TabItem Name ="General">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="General" Foreground="Black"/>
                    </StackPanel>
                </TabItem.Header>
                <ScrollViewer Grid.Row="0" Grid.Column="0" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                    <Grid Name="GridDisplayOptionsGeneral" Margin="0,10,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="80"/>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="80"/>
                            <RowDefinition Height="100"/>
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" Orientation="Vertical">
                            <CheckBox Name="chbLightDirectional" IsChecked="{Binding Path=LightDirectional}">Directional Light</CheckBox>
                            <CheckBox Name="chbLightPoint" IsChecked="{Binding Path=LightPoint}" >Point Light</CheckBox>
                            <CheckBox Name="chbLightSpot" IsChecked="{Binding Path=LightSpot}">SpotLight</CheckBox>
                            <CheckBox Name="chbLightAmbient" IsChecked="{Binding Path=LightAmbient}">Ambient Light</CheckBox>
                        </StackPanel>

                        <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Vertical" Grid.ColumnSpan="2">
                            <CheckBox Name="chbMaterialDiffuse" Grid.Row="0" Grid.Column="4" IsChecked="{Binding Path=MaterialDiffuse}">Diffuse Material</CheckBox>
                            <CheckBox Name="chbMaterialEmissive" Grid.Row="1" Grid.Column="4" IsChecked="{Binding Path=MaterialEmissive}">Emissive Material</CheckBox>
                        </StackPanel>

                        <StackPanel Grid.Row="2" Grid.Column="0">
                            <CheckBox Name="chbDisplayGlobalAxis" IsChecked="{Binding Path=ShowGlobalAxis}">Display Global Axis</CheckBox>
                            <CheckBox Name="chbDisplayLocalMemberAxis" IsChecked="{Binding Path=ShowLocalMembersAxis}" IsEnabled="{Binding Path=IsEnabledLocalMembersAxis}" >Display Local Member Axis</CheckBox>
                            <CheckBox Name="chbDisplaySurfaceLoadsAxis" IsChecked="{Binding Path=ShowSurfaceLoadsAxis}" IsEnabled="{Binding Path=IsEnabledSurfaceLoadsAxis}" >Display Surface Loads Axis</CheckBox>
                        </StackPanel>

                    </Grid>
                </ScrollViewer>
            </TabItem>

            <TabItem Name ="Objects">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Objects" Foreground="Black"/>
                    </StackPanel>
                </TabItem.Header>
                <ScrollViewer Grid.Row="0" Grid.Column="0" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                    <Grid Name="GridDisplayOptionsObjects" Margin="0,10,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>                            
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <StackPanel Orientation="Vertical" Grid.Row="0" Grid.Column="0">
                            <StackPanel>
                                <CheckBox Name="chbDisplayMembers" IsChecked="{Binding Path=DisplayMembers}">Display Members</CheckBox>
                                <CheckBox Name="chbDisplayJoints"  IsChecked="{Binding Path=DisplayJoints}">Display Joints</CheckBox>
                                <CheckBox Name="chbDisplayPlates" Margin="25 0 0 0" IsChecked="{Binding Path=DisplayPlates}">Display Plates</CheckBox>
                                <CheckBox Name="chbDisplayConnectors" Margin="25 0 0 0" IsChecked="{Binding Path=DisplayConnectors}">Display Connectors</CheckBox>
                                <CheckBox Name="chbDisplayNodes" IsChecked="{Binding Path=DisplayNodes}">Display Nodes</CheckBox>
                                <CheckBox Name="chbDisplayFoundations" IsChecked="{Binding Path=DisplayFoundations}">Display Foundations</CheckBox>
                                <CheckBox Name="chbDisplayReinforcementBars" Margin="25 0 0 0" IsChecked="{Binding Path=DisplayReinforcementBars}">Display Reinforcement</CheckBox>
                                <CheckBox Name="chbDisplayFloorSlab" IsChecked="{Binding Path=DisplayFloorSlab}">Display Floor Slab</CheckBox>
                                <CheckBox Name="chbDisplaySawCuts" Margin="25 0 0 0" IsChecked="{Binding Path=DisplaySawCuts}">Display Saw Cuts</CheckBox>
                                <CheckBox Name="chbDisplayControlJoints" Margin="25 0 0 0" IsChecked="{Binding Path=DisplayControlJoints}">Display Control Joints</CheckBox>
                                <CheckBox Name="chbDisplayNodalSupports" IsChecked="{Binding Path=DisplayNodalSupports}">Nodal Supports</CheckBox>
                            </StackPanel>

                            <StackPanel Margin="0 15 0 0">
                                <CheckBox Name="chbDisplayCladding" IsChecked="{Binding Path=DisplayCladding}">Display Cladding</CheckBox>
                                <CheckBox Name="chbDisplayCladdingLeftWall" Margin="25 0 0 0" IsChecked="{Binding Path=DisplayCladdingLeftWall}">Display Left Wall</CheckBox>
                                <CheckBox Name="chbDisplayCladdingRightWall" Margin="25 0 0 0" IsChecked="{Binding Path=DisplayCladdingRightWall}">Display Right Wall</CheckBox>
                                <CheckBox Name="chbDisplayCladdingFrontWall" Margin="25 0 0 0" IsChecked="{Binding Path=DisplayCladdingFrontWall}">Display Front Wall</CheckBox>
                                <CheckBox Name="chbDisplayCladdingBackWall" Margin="25 0 0 0" IsChecked="{Binding Path=DisplayCladdingBackWall}">Display Back Wall</CheckBox>
                                <CheckBox Name="chbDisplayCladdingRoof" Margin="25 0 0 0" IsChecked="{Binding Path=DisplayCladdingRoof}">Display Roof</CheckBox>
                                <CheckBox Name="chbDisplayDoors" Margin="25 0 0 0" IsChecked="{Binding Path=DisplayDoors}">Display Doors</CheckBox>
                                <CheckBox Name="chbDisplayWindows" Margin="25 0 0 0" IsChecked="{Binding Path=DisplayWindows}">Display Windows</CheckBox>
                                <CheckBox Name="chbDisplayFibreGlass" Margin="25 0 0 0" IsChecked="{Binding Path=DisplayFibreglass}">Display Fibreglass</CheckBox>
                            </StackPanel>

                            <StackPanel Margin="0 15 0 0">
                                <CheckBox Name="chbDisplayMembersCenterLines" IsChecked="{Binding Path=DisplayMembersCenterLines}">Display Members Centerlines</CheckBox>
                                <CheckBox Name="chbDisplaySolidModel"  IsChecked="{Binding Path=DisplaySolidModel}">Display Solid Model</CheckBox>
                                <CheckBox Name="chbDisplayWireFrameModel" IsChecked="{Binding Path=DisplayWireFrameModel}">Display Wireframe Model</CheckBox>

                                <CheckBox Name="chbDisplayMembersWireFrame" Margin="25 0 0 0" IsChecked="{Binding Path=DisplayMembersWireFrame}">Members</CheckBox>
                                <CheckBox Name="chbDisplayJointsWireFrame"  Margin="25 0 0 0" IsChecked="{Binding Path=DisplayJointsWireFrame}">Joints</CheckBox>
                                <CheckBox Name="chbDisplayPlatesWireFrame"  Margin="50 0 0 0" IsChecked="{Binding Path=DisplayPlatesWireFrame}">Plates</CheckBox>
                                <CheckBox Name="chbDisplayConnectorsWireFrame" Margin="50 0 0 0" IsChecked="{Binding Path=DisplayConnectorsWireFrame}">Connectors</CheckBox>
                                <!--<CheckBox Name="chbDisplayNodesWireFrame" Margin="25 0 0 0" IsChecked="{Binding Path=DisplayNodesWireFrame}">Nodes</CheckBox>-->
                                <CheckBox Name="chbDisplayFoundationsWireFrame" Margin="25 0 0 0" IsChecked="{Binding Path=DisplayFoundationsWireFrame}">Foundations</CheckBox>
                                <CheckBox Name="chbDisplayReinforcementBarsWireFrame" Margin="50 0 0 0" IsChecked="{Binding Path=DisplayReinforcementBarsWireFrame}">Reinforcement Bars</CheckBox>
                                <CheckBox Name="chbDisplayFloorSlabWireFrame" Margin="25 0 0 0" IsChecked="{Binding Path=DisplayFloorSlabWireFrame}">Floor Slab</CheckBox>

                                <CheckBox Name="chbDisplayCladdingWireFrame" Margin="25 0 0 0" IsChecked="{Binding Path=DisplayCladdingWireFrame}">Cladding</CheckBox>
                                <CheckBox Name="chbDisplayFibreglassWireFrame" Margin="50 0 0 0" IsChecked="{Binding Path=DisplayFibreglassWireFrame}">Fibreglass</CheckBox>
                                <CheckBox Name="chbDisplayDoorsWireFrame" Margin="50 0 0 0" IsChecked="{Binding Path=DisplayDoorsWireFrame}">Doors</CheckBox>
                                <CheckBox Name="chbDisplayWindowsWireFrame" Margin="50 0 0 0" IsChecked="{Binding Path=DisplayWindowsWireFrame}">Windows</CheckBox>

                                <TextBlock Margin="0 10 0 0" Text="Doors and windows"/>
                                <CheckBox Name="chbDoorsSimpleSolidModel" Margin="0 0 0 0" IsChecked="{Binding Path=DoorsSimpleSolidModel}">Simple solid model</CheckBox>
                                <CheckBox Name="chbDoorsSimpleWireframe" Margin="25 0 0 0" IsChecked="{Binding Path=DoorsSimpleWireframe}">Simple wireframe model (outline)</CheckBox>
                                <CheckBox Name="chbWindowOutlineOnly" Margin="50 0 0 0" IsChecked="{Binding Path=WindowOutlineOnly}">Window outline only</CheckBox>
                            </StackPanel>
                        </StackPanel>

                        <StackPanel Grid.Row="0" Grid.Column="1">
                            <CheckBox Name="chbDisplayMemberDescription" IsChecked="{Binding Path=ShowMemberDescription}">Display Member Description</CheckBox>
                            <CheckBox Name="chbDisplayMemberID" Margin="25 0 0 0" IsChecked="{Binding Path=ShowMemberID}" >ID</CheckBox>
                            <CheckBox Name="chbDisplayMemberPrefix" Margin="25 0 0 0" IsChecked="{Binding Path=ShowMemberPrefix}" >Prefix</CheckBox>
                            <CheckBox Name="chbDisplayMemberCrossSectionStartName" Margin="25 0 0 0" IsChecked="{Binding Path=ShowMemberCrossSectionStartName}" >Cross-Section name</CheckBox>
                            <CheckBox Name="chbDisplayMemberRealLength" Margin="25 0 0 0" IsChecked="{Binding Path=ShowMemberRealLength}" >Real Length</CheckBox>
                            <CheckBox Name="chbDisplayMemberRealLengthUnit" Margin="25 0 0 0" IsChecked="{Binding Path=ShowMemberRealLengthUnit}" >Unit</CheckBox>
                            <CheckBox Name="chbDisplayNodesDescription" Margin="0 5 0 0" IsChecked="{Binding Path=ShowNodesDescription}">Display Nodes ID</CheckBox>
                            <CheckBox Name="chbDisplayFoundationsDescription" IsChecked="{Binding Path=ShowFoundationsDescription}">Display Foundations Description</CheckBox>
                            <CheckBox Name="chbDisplayFloorSlabDescription" IsChecked="{Binding Path=ShowFloorSlabDescription}">Display FloorSlab Description</CheckBox>
                            <CheckBox Name="chbDisplaySawCutsDescription" IsChecked="{Binding Path=ShowSawCutsDescription}">Display Saw Cuts Description</CheckBox>
                            <CheckBox Name="chbDisplayControlJointsDescription" IsChecked="{Binding Path=ShowControlJointsDescription}">Display Control Joints Description</CheckBox>
                            <CheckBox Name="chbDisplayDimensions" IsChecked="{Binding Path=ShowDimensions}">Display Dimensions</CheckBox>
                            <CheckBox Name="chbDisplayGridLines" IsChecked="{Binding Path=ShowGridLines}">Display Gridlines</CheckBox>
                            <CheckBox Name="chbDisplaySectionSymbols" IsChecked="{Binding Path=ShowSectionSymbols}">Display Section Symbols</CheckBox>
                            <CheckBox Name="chbDisplayDetailSymbols" IsChecked="{Binding Path=ShowDetailSymbols}">Display Detail Symbols</CheckBox>
                            <CheckBox Name="chbDisplaySlabRebates" IsChecked="{Binding Path=ShowSlabRebates}">Display Slab Rebates</CheckBox>

                            <CheckBox Name="chbDisplayCladdingDescription" IsChecked="{Binding Path=DisplayCladdingDescription}">Display Cladding Description</CheckBox>
                            <CheckBox Name="chbDisplayCladdingID" Margin="25 0 0 0" IsChecked="{Binding Path=DisplayCladdingID}">ID</CheckBox>
                            <CheckBox Name="chbDisplayCladdingPrefix" Margin="25 0 0 0" IsChecked="{Binding Path=DisplayCladdingPrefix}">Prefix</CheckBox>
                            <CheckBox Name="chbDisplayCladdingLengthWidth" Margin="25 0 0 0" IsChecked="{Binding Path=DisplayCladdingLengthWidth}">Length x Width</CheckBox>
                            <CheckBox Name="chbDisplayCladdingArea" Margin="25 0 0 0" IsChecked="{Binding Path=DisplayCladdingArea}">Area</CheckBox>
                            <CheckBox Name="chbDisplayCladdingUnits" Margin="25 0 0 0" IsChecked="{Binding Path=DisplayCladdingUnits}">Units</CheckBox>

                            <CheckBox Name="chbDisplayFibreglassDescription" IsChecked="{Binding Path=DisplayFibreglassDescription}">Display Fibreglass Description</CheckBox>
                            <CheckBox Name="chbDisplayFibreglassID" Margin="25 0 0 0" IsChecked="{Binding Path=DisplayFibreglassID}">ID</CheckBox>
                            <CheckBox Name="chbDisplayFibreglassPrefix" Margin="25 0 0 0" IsChecked="{Binding Path=DisplayFibreglassPrefix}">Prefix</CheckBox>
                            <CheckBox Name="chbDisplayFibreglassLengthWidth" Margin="25 0 0 0" IsChecked="{Binding Path=DisplayFibreglassLengthWidth}">Length x Width</CheckBox>
                            <CheckBox Name="chbDisplayFibreglassArea" Margin="25 0 0 0" IsChecked="{Binding Path=DisplayFibreglassArea}">Area</CheckBox>
                            <CheckBox Name="chbDisplayFibreglassUnits" Margin="25 0 0 0" IsChecked="{Binding Path=DisplayFibreglassUnits}">Units</CheckBox>

                            <CheckBox Name="chbDisplayDoorDescription" IsChecked="{Binding Path=DisplayDoorDescription}">Display Door Description</CheckBox>
                            <CheckBox Name="chbDisplayDoorID" Margin="25 0 0 0" IsChecked="{Binding Path=DisplayDoorID}">ID</CheckBox>
                            <CheckBox Name="chbDisplayDoorType" Margin="25 0 0 0" IsChecked="{Binding Path=DisplayDoorType}">Type</CheckBox>
                            <CheckBox Name="chbDisplayDoorHeightWidth" Margin="25 0 0 0" IsChecked="{Binding Path=DisplayDoorHeightWidth}">Height x Width</CheckBox>
                            <CheckBox Name="chbDisplayDoorArea" Margin="25 0 0 0" IsChecked="{Binding Path=DisplayDoorArea}">Area</CheckBox>
                            <CheckBox Name="chbDisplayDoorUnits" Margin="25 0 0 0" IsChecked="{Binding Path=DisplayDoorUnits}">Units</CheckBox>

                            <CheckBox Name="chbDisplayWindowDescription" IsChecked="{Binding Path=DisplayWindowDescription}">Display Window Description</CheckBox>
                            <CheckBox Name="chbDisplayWindowID" Margin="25 0 0 0" IsChecked="{Binding Path=DisplayWindowID}">ID</CheckBox>
                            <CheckBox Name="chbDisplayWindowHeightWidth" Margin="25 0 0 0" IsChecked="{Binding Path=DisplayWindowHeightWidth}">Height x Width</CheckBox>
                            <CheckBox Name="chbDisplayWindowArea" Margin="25 0 0 0" IsChecked="{Binding Path=DisplayWindowArea}">Area</CheckBox>
                            <CheckBox Name="chbDisplayWindowUnits" Margin="25 0 0 0" IsChecked="{Binding Path=DisplayWindowUnits}">Units</CheckBox>
                        </StackPanel>
                    </Grid>
                </ScrollViewer>
            </TabItem>

            <TabItem Name="Colours">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Colours" Foreground="Black"/>
                    </StackPanel>
                </TabItem.Header>
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                    <Grid Name="GridDisplayOptionsColours" Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Wireframe Colour:" HorizontalAlignment="Left"/>
                        <ComboBox Grid.Row="0" Grid.Column="1" Name ="Combobox_WireframeColor" HorizontalAlignment="Left" Width="{StaticResource theTextBoxWidth}" VerticalAlignment="Top" 
                      SelectedIndex="{Binding Path=WireframeColorIndex, UpdateSourceTrigger=PropertyChanged, ValidatesOnExceptions=True}"
                      ItemsSource="{Binding Path=ColorList}">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Rectangle Fill="{Binding Name}" Width="92" Height="12" Margin="0,1,5,1" />
                                        <TextBlock Text="{Binding Name}" />
                                    </StackPanel>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="WireFrame Line Thickness:" HorizontalAlignment="Left" VerticalAlignment="Top" />
                        <TextBox Grid.Row="1" Grid.Column="1" Name ="WireFrameLineThickness" HorizontalAlignment="Left" Width="{StaticResource theTextBoxWidth}"
                         TextWrapping="Wrap" VerticalAlignment="Top"
                         Text="{Binding Path=WireFrameLineThickness, UpdateSourceTrigger=LostFocus, ValidatesOnExceptions=True}"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Node Colour:" HorizontalAlignment="Left"/>
                        <ComboBox Grid.Row="2" Grid.Column="1" Name ="Combobox_NodeColor" HorizontalAlignment="Left" Width="{StaticResource theTextBoxWidth}" VerticalAlignment="Top" 
                      SelectedIndex="{Binding Path=NodeColorIndex, UpdateSourceTrigger=PropertyChanged, ValidatesOnExceptions=True}"
                      ItemsSource="{Binding Path=ColorList}">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Rectangle Fill="{Binding Name}" Width="92" Height="12" Margin="0,1,5,1" />
                                        <TextBlock Text="{Binding Name}" />
                                    </StackPanel>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>

                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Node Description Text Colour:" HorizontalAlignment="Left"/>
                        <ComboBox Grid.Row="3" Grid.Column="1" Name ="Combobox_NodeDescriptionTextColor" HorizontalAlignment="Left" Width="{StaticResource theTextBoxWidth}" VerticalAlignment="Top" 
                      SelectedIndex="{Binding Path=NodeDescriptionTextColorIndex, UpdateSourceTrigger=PropertyChanged, ValidatesOnExceptions=True}"
                      ItemsSource="{Binding Path=ColorList}">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Rectangle Fill="{Binding Name}" Width="92" Height="12" Margin="0,1,5,1" />
                                        <TextBlock Text="{Binding Name}" />
                                    </StackPanel>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>

                        <TextBlock Grid.Row="4" Grid.Column="0" Text="Member Description Text Colour:" HorizontalAlignment="Left"/>
                        <ComboBox Grid.Row="4" Grid.Column="1" Name ="Combobox_MemberDescriptionTextColor" HorizontalAlignment="Left" Width="{StaticResource theTextBoxWidth}" VerticalAlignment="Top" 
                      SelectedIndex="{Binding Path=MemberDescriptionTextColorIndex, UpdateSourceTrigger=PropertyChanged, ValidatesOnExceptions=True}"
                      ItemsSource="{Binding Path=ColorList}">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Rectangle Fill="{Binding Name}" Width="92" Height="12" Margin="0,1,5,1" />
                                        <TextBlock Text="{Binding Name}" />
                                    </StackPanel>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>

                        <TextBlock Grid.Row="5" Grid.Column="0" Text="Dimension Text Colour:" HorizontalAlignment="Left"/>
                        <ComboBox Grid.Row="5" Grid.Column="1" Name ="Combobox_DimensionTextColor" HorizontalAlignment="Left" Width="{StaticResource theTextBoxWidth}" VerticalAlignment="Top" 
                      SelectedIndex="{Binding Path=DimensionTextColorIndex, UpdateSourceTrigger=PropertyChanged, ValidatesOnExceptions=True}"
                      ItemsSource="{Binding Path=ColorList}">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Rectangle Fill="{Binding Name}" Width="92" Height="12" Margin="0,1,5,1" />
                                        <TextBlock Text="{Binding Name}" />
                                    </StackPanel>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>

                        <TextBlock Grid.Row="6" Grid.Column="0" Text="Dimension Line Colour:" HorizontalAlignment="Left"/>
                        <ComboBox Grid.Row="6" Grid.Column="1" Name ="Combobox_DimensionLineColor" HorizontalAlignment="Left" Width="{StaticResource theTextBoxWidth}" VerticalAlignment="Top" 
                      SelectedIndex="{Binding Path=DimensionLineColorIndex, UpdateSourceTrigger=PropertyChanged, ValidatesOnExceptions=True}"
                      ItemsSource="{Binding Path=ColorList}">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Rectangle Fill="{Binding Name}" Width="92" Height="12" Margin="0,1,5,1" />
                                        <TextBlock Text="{Binding Name}" />
                                    </StackPanel>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>

                        <TextBlock Grid.Row="7" Grid.Column="0" Text="GridLine Label Text Colour:" HorizontalAlignment="Left"/>
                        <ComboBox Grid.Row="7" Grid.Column="1" Name ="Combobox_GridLineLabelTextColor" HorizontalAlignment="Left" Width="{StaticResource theTextBoxWidth}" VerticalAlignment="Top" 
                      SelectedIndex="{Binding Path=GridLineLabelTextColorIndex, UpdateSourceTrigger=PropertyChanged, ValidatesOnExceptions=True}"
                      ItemsSource="{Binding Path=ColorList}">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Rectangle Fill="{Binding Name}" Width="92" Height="12" Margin="0,1,5,1" />
                                        <TextBlock Text="{Binding Name}" />
                                    </StackPanel>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>

                        <TextBlock Grid.Row="8" Grid.Column="0" Text="Grid Line Colour:" HorizontalAlignment="Left"/>
                        <ComboBox Grid.Row="8" Grid.Column="1" Name ="Combobox_GridLineColor" HorizontalAlignment="Left" Width="{StaticResource theTextBoxWidth}" VerticalAlignment="Top" 
                      SelectedIndex="{Binding Path=GridLineColorIndex, UpdateSourceTrigger=PropertyChanged, ValidatesOnExceptions=True}"
                      ItemsSource="{Binding Path=ColorList}">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Rectangle Fill="{Binding Name}" Width="92" Height="12" Margin="0,1,5,1" />
                                        <TextBlock Text="{Binding Name}" />
                                    </StackPanel>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>

                        <TextBlock Grid.Row="9" Grid.Column="0" Text="Grid Line Pattern Type:" HorizontalAlignment="Left"/>
                        <ComboBox Grid.Row="9" Grid.Column="1" Name ="Combobox_GridLinePatternType" HorizontalAlignment="Left" Width="{StaticResource theTextBoxWidth}"
                  VerticalAlignment="Top" ItemsSource="{Binding Path=LinePatternTypes, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}" 
                  DisplayMemberPath="Name" SelectedValuePath="ID" SelectedValue="{Binding Path=GridLinePatternType, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay, ValidatesOnExceptions=True}"/>


                        <TextBlock Grid.Row="10" Grid.Column="0" Text="Section Symbol Label Text Colour:" HorizontalAlignment="Left"/>
                        <ComboBox Grid.Row="10" Grid.Column="1" Name ="Combobox_SectionSymbolLabelTextColor" HorizontalAlignment="Left" Width="{StaticResource theTextBoxWidth}" VerticalAlignment="Top" 
                      SelectedIndex="{Binding Path=SectionSymbolLabelTextColorIndex, UpdateSourceTrigger=PropertyChanged, ValidatesOnExceptions=True}"
                      ItemsSource="{Binding Path=ColorList}">
                            <ComboBox.ItemTemplate>
